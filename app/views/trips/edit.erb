<h1 id="greeting"> Update This Trip </h1>

<form action="/trips/<%= @trip.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <label for=""> Duration:</label>
  <input type="textfield" value="<%= @trip.duration %>" name="trip[duration]"/><br>
  <label for="">Start Date:</label>
  <input type="textfield" value="<%= @trip.start_date %>" name="trip[start_date]" /><br>
  <label for="">Start Station:</label>
  <select name="trip[start_station_id]">
    <% @stations.each do |station| %>
      <% if station.id == @trip.start_station_id %>
        <option value="<%= station.id %>" selected><%=station.name%></option>
      <% else %>
        <option value="<%= station.id %>"><%=station.name%></option>
      <% end %>
    <% end %>
  </select></br>
  <label for="">End Date:</label>
  <input type="textfield" value="<%= @trip.end_date %>" name="trip[end_date]" /><br>
  <label for="">End Station:</label>
  <select name="trip[end_station_id]">
    <% @stations.each do |station| %>
      <% if station.id == @trip.end_station_id %>
        <option value="<%= station.id %>" selected><%=station.name%></option>
      <% else %>
        <option value="<%= station.id %>"><%=station.name%></option>
      <% end %>
    <% end %>
  </select></br>
  <label for="">Bike ID:</label>
  <input type="textfield" value="<%= @trip.bike_id %>" name="trip[bike_id]" /><br>
  <label for="">Subscription Type:</label>
  <input type="textfield" value="<%= @trip.subscription_id %>" name="trip[subscription_id]" /><br>
  <label for="">Zip Code:</label>
  <input type="textfield" value="<%= @trip.zip_code %>" name="trip[zip_code]" /><br>
  <input type="submit" value="Update Trip" />
</form>
